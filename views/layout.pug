doctype html
html
  head
    title Asset Management System
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

    style.
      html, body {
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
      }

      .navbar-custom {
        position: sticky;
        top: 0;
        z-index: 1050;
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      }

      .navbar-brand {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: #0d6efd !important;
      }

      .navbar-brand img {
        width: 28px;
        height: 28px;
      }

      .nav-link {
        font-weight: 500;
        color: #333 !important;
      }

      .nav-link:hover {
        color: #0d6efd !important;
      }

      .logout-link {
        color: #dc3545 !important;
      }

  body
    if showLayout
      nav.navbar.navbar-expand-lg.navbar-light.navbar-custom
        .container
          a.navbar-brand(href='/')
            img(src='https://cdn-icons-png.flaticon.com/512/599/599305.png', alt='Logo')
            | Asset Manager

          button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
            span.navbar-toggler-icon

          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link.logout-link(href='/logout') Logout

    block content

    if showLayout
      footer.mt-5.py-4.border-top.bg-white
        .container.d-flex.flex-column.flex-md-row.justify-content-between.align-items-center.gap-2
          span.text-muted &copy; 2025 Asset Management System
